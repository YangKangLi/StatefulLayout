<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_no_data_pic"
        android:layout_width="192dp"
        android:layout_height="133dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="118dp"
        android:background="@null"
        android:src="@drawable/ic_default_empty" />

    <TextView
        android:id="@+id/tv_no_data_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_no_data_pic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="@string/default_empty_tips"
        android:textColor="#ff999999"
        android:textSize="15sp" />
</RelativeLayout>